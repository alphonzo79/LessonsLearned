<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rowley="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff999999"
    android:padding="30dp">

    <ImageView
        android:id="@+id/image_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle"
        android:contentDescription="@string/none"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/image_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/circle"
        android:contentDescription="@string/none"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/image_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/circle"
        android:contentDescription="@string/none"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/image_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_one"
        android:layout_marginTop="40dp"
        android:src="@drawable/circle"
        android:contentDescription="@string/none"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/image_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_one"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/circle"
        android:contentDescription="@string/none"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/image_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_one"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/circle"
        android:contentDescription="@string/none"
        android:scaleType="center" />

    <rowley.lessonslearnedexamples.view.TintableImageView
        android:id="@+id/image_seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_four"
        android:layout_toLeftOf="@id/image_five"
        android:layout_marginTop="40dp"
        android:src="@drawable/circle"
        android:contentDescription="@string/none"
        rowley:srcColorState="@color/button_color_state"
        android:scaleType="center" />

    <LinearLayout
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_four"
        android:layout_toRightOf="@id/image_five"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <rowley.lessonslearnedexamples.view.TintableImageView
            android:id="@+id/button_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle"
            android:contentDescription="@string/none"
            android:duplicateParentState="true"
            rowley:srcColorState="@color/button_color_state"
            android:scaleType="center" />

        <TextView
            android:id="@+id/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_text"
            android:textColor="@color/button_color_state"
            android:duplicateParentState="true" />

    </LinearLayout>

</RelativeLayout>